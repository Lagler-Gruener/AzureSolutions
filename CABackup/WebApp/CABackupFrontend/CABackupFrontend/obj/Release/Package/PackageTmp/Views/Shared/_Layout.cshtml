<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Azure CABackup</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/img/logo.png" height="60px" />
            </a>

            <div class="collapse navbar-collapse navbar navbar-light bg-light" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Backups", "Backups")">Backup</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Setting", "Settings")">Settings</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                </ul>
            </div>

            Welcome: @Request.Headers["X-MS-CLIENT-PRINCIPAL-NAME"]
        </nav>
        
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://cloudblogger.at" target="_blank">Cloudblogger.at</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/MVCGridHandler.axd/script.js"></script>
</body>
</html>
