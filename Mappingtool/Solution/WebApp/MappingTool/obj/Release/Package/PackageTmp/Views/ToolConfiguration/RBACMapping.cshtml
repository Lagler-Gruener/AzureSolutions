@using MappingTool.Models;

<div class="jumbotron MTHeaderStyle">
    <h1>RBAC</h1>
    <p class="lead">In that section each admin can see the current RBAC mapping configuration. He can edit, delete and add a new one to the Azure storage table.</p>
</div>

@using (Html.BeginForm())
{
    <center>
        <div class="MTGridSizeFull">
            <div style="text-align:right">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            <div class="well MTGridHeader">
                <div class="form-inline MTGridInner">
                    <div class="form-group" style="padding-right:10px">
                        <b>Filter by:</b>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="RBAC Permission"
                               data-mvcgrid-type="filter" data-mvcgrid-option="Permission" />
                    </div>
                    <div class="form-group" style="padding-left:10px">
                        <button type="button" class="btn btn-success" data-mvcgrid-apply-filter="click">Apply</button>
                    </div>
                    <div class="form-group MTGridInnerButtonright">
                        @Html.ActionLink("New Configuration", "RBACMappingNew", "ToolConfiguration", new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
            @Html.MVCGrid("RBACMappingConfig")
        </div>
    </center>
}


