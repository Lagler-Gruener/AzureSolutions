
@model MappingTool.Models.listsubscriptions

@{
    ViewBag.Title = "SubMappingEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron MTHeaderStyle">
    <h1>Edit configuration</h1>
    <p class="lead">In that section each admin can edit the existing Subscription mapping configuration.</p>
</div>

@using (Html.BeginForm("SubMappingSaveExistConfig", "ToolConfiguration", FormMethod.Post))
{
    @Html.HiddenFor(m => m.RowKey)
<center>
    <div class="MTGridSizeMedium">
        <div style="text-align:right">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
        <div class="well MTGridHeader">
            <div class="form-inline MTGridInner">
                <div class="form-group" style="padding-right:10px">
                    <h4>Change setting:</h4>&nbsp; <h5>@Html.DisplayFor(m => m.SubMapping)</h5>
                </div>
                <div class="form-group MTGridInnerButtonright">
                    <input type="submit" value="Save configuration" class="btn btn-success" />
                </div>
            </div>
        </div>
        <div style="padding-top:20px">
            <table id="t01" style="width:100%">
                <tr>
                    <th>Permission</th>
                    <th>Mapping</th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(m => m.RowKey)
                    </td>
                    <td>
                        @Html.EditorFor(m => m.SubMapping, new { htmlAttributes = new { @class = "form-control" } })
                    </td>
                </tr>
            </table>
        </div>
        <div style="text-align:left">
            @Html.ActionLink("< Back to List", "Subscriptions", null, new { @class = "btn btn-outline-success" })
        </div>
    </div>
</center>
}

